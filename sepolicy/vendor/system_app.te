# Permissions for generic system applications.
# These should be as restrictive as possible.

# Allow searching directories for hardware info.
allow system_app proc_touchpanel:dir search;
allow system_app sysfs_usb_supply:dir search;
allow system_app sysfs_battery_supply:dir search;
allow system_app sysfs_oppo_display:dir search;

# Allow reading properties and files for information display.
get_prop(system_app, oppo_debug_prop)
allow system_app vendor_default_prop:file { map getattr };
r_dir_file(system_app, sysfs_battery_supply)
r_dir_file(system_app, sysfs_fps)
r_dir_file(system_app, proc_vmallocinfo)
r_dir_file(system_app, proc_pagetypeinfo)
r_dir_file(system_app, sysfs_zram)