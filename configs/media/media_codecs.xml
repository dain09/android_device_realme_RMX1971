<MediaCodecs>
    <!--
        Import Google's common codecs. This provides standard software codecs
        for audio and video, including the essential AV1 decoder.
    -->
    <Include href="media_codecs_google_audio.xml" />
    <Include href="media_codecs_google_video.xml" />
    <Include href="media_codecs_google_c2.xml" />

    <Settings>
        <Setting name="max-video-encoder-input-buffers" value="11" />
    </Settings>

    <!--
        ============================================================
        Hardware Accelerated Video ENCODERS
        ============================================================
    -->
    <Encoders>
        <MediaCodec name="OMX.qcom.video.encoder.avc" type="video/avc" >
            <Alias name="c2.qcom.video.encoder.avc" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Quirk name="requires-loaded-to-idle-after-allocation" />
            <Limit name="size" min="96x96" max="4096x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="24" max="979200" />
            <Limit name="bitrate" range="1-100000000" />
            <Limit name="concurrent-instances" max="16" />
        </MediaCodec>
        <MediaCodec name="OMX.qcom.video.encoder.hevc" type="video/hevc" >
            <Alias name="c2.qcom.video.encoder.hevc" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Quirk name="requires-loaded-to-idle-after-allocation" />
            <Limit name="size" min="96x96" max="4096x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="24" max="979200" />
            <Limit name="bitrate" range="1-100000000" />
            <Limit name="concurrent-instances" max="16" />
            <Feature name="bitrate-modes" value="VBR,CQ" />
        </MediaCodec>
        <MediaCodec name="OMX.qcom.video.encoder.vp8" type="video/x-vnd.on2.vp8" >
            <Alias name="c2.qcom.video.encoder.vp8" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Quirk name="requires-loaded-to-idle-after-allocation" />
            <Limit name="size" min="96x96" max="3840x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="24" max="979200" />
            <Limit name="bitrate" range="1-20000000" />
            <Limit name="concurrent-instances" max="16" />
        </MediaCodec>
    </Encoders>

    <!--
        ============================================================
        Hardware Accelerated Video DECODERS
        ============================================================
    -->
    <Decoders>
        <MediaCodec name="OMX.qcom.video.decoder.avc" type="video/avc" >
            <Alias name="c2.qcom.video.decoder.avc" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Limit name="size" min="96x96" max="4096x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="24" max="979200" />
            <Limit name="bitrate" range="1-100000000" />
            <Limit name="concurrent-instances" max="16" />
            <Feature name="adaptive-playback" />
        </MediaCodec>
        <MediaCodec name="OMX.qcom.video.decoder.hevc" type="video/hevc" >
            <Alias name="c2.qcom.video.decoder.hevc" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Limit name="size" min="96x96" max="4096x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="1" max="979200" />
            <Limit name="bitrate" range="1-100000000" />
            <Limit name="concurrent-instances" max="16" />
            <Feature name="adaptive-playback" />
        </MediaCodec>
        <MediaCodec name="OMX.qcom.video.decoder.vp8" type="video/x-vnd.on2.vp8" >
            <Alias name="c2.qcom.video.decoder.vp8" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Limit name="size" min="96x96" max="3840x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="24" max="979200" />
            <Limit name="bitrate" range="1-20000000" />
            <Limit name="concurrent-instances" max="16" />
            <Feature name="adaptive-playback" />
        </MediaCodec>
        <MediaCodec name="OMX.qcom.video.decoder.vp9" type="video/x-vnd.on2.vp9" >
            <Alias name="c2.qcom.video.decoder.vp9" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
            <Limit name="size" min="96x96" max="3840x2160" />
            <Limit name="alignment" value="2x2" />
            <Limit name="block-size" value="16x16" />
            <Limit name="blocks-per-second" min="24" max="979200" />
            <Limit name="bitrate" range="1-20000000" />
            <Limit name="concurrent-instances" max="6" />
            <Feature name="adaptive-playback" />
        </MediaCodec>
    </Decoders>
</MediaCodecs>