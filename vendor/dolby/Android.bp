//
// Dolby Atmos prebuilt configuration for RMX1971
// This file defines all necessary Dolby components for the Soong build system.
//

// The main UI application for Dolby Atmos
android_app_import {
    name: "DolbySound",
    apk: "priv-app/DolbySound/DolbySound.apk",
    certificate: "platform",
    dex_preopt: {
        enabled: false,
    },
    privileged: true,
    product_specific: true,
}

// The critical background service for Dolby processing
android_app_import {
    name: "daxService",
    apk: "priv-app/daxService/daxService.apk",
    certificate: "platform",
    dex_preopt: {
        enabled: false,
    },
    privileged: true,
    system_ext_specific: true,
}

// The core Dolby audio processing library
cc_prebuilt_library_shared {
    name: "libswdap",
    arch: {
        arm: {
            srcs: ["lib/libswdap.so"],
        },
        arm64: {
            srcs: ["lib64/libswdap.so"],
        },
    },
    strip: {
        none: true,
    },
    product_specific: true,
}
