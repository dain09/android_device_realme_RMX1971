<resources>
    <!-- Enable auxiliary cameras selector in the UI -->
    <bool name="config_enableAuxCameras">true</bool>

    <!-- List of ID of auxiliary cameras that should be hidden from the user -->
    <string-array name="config_ignoredAuxCameraIds">
        <item>5</item>
        <item>6</item>
        <item>7</item>
    </string-array>

    <!--
        Define additional High-Frame-Rate (HFR) modes to be shown in the UI.
        These should match what was enabled in media_profiles.
    -->
    <string-array name="config_additionalVideoConfigurations">
        <!-- Main Camera (ID 0) -->
        <!-- Expose 60fps for all resolutions up to 4K (uhd). -->
        <item>0</item> <item>sd|hd|fhd|uhd</item> <item>60</item>
        <!-- TWEAK: Expose 120fps for 720p (hd) for Slow Motion. -->
        <item>0</item> <item>hd</item> <item>120</item>
        
        <!-- Front Camera (ID 1) -->
        <item>1</item> <item>sd|hd|fhd</item> <item>30</item>

        <!-- Other AUX Cameras -->
        <item>2</item> <item>sd|hd|fhd</item> <item>30</item>
    </string-array>
</resources>