    <!-- screen waking on charging plug/unplug -->
    <bool name="config_unplugTurnsOnScreen">true</bool>

    <!-- TWEAK: Set default navigation mode to Gestural Navigation (2)
         0: 3-button, 1: 2-button, 2: Gestural -->
    <integer name="config_navBarInteractionMode">2</integer>

    <!-- TWEAK: Make screen rotation more responsive
         Rotation animation jump-cut angle -->
    <integer name="config_screen_rotation_animation_jump_cut_angle">45</integer>
