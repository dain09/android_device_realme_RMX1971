<resources>

    <!-- Padding on the start and end of the statusbar -->
    <dimen name="status_bar_extra_padding">13dp</dimen>

    <!--
        TWEAK: Screen Corner Radius
        Controls the roundness of the physical screen corners.
        The value should be close to the actual hardware radius.
        A common value for modern devices is around 25dp-30dp.
    -->
    <dimen name="rounded_corner_radius">28dp</dimen>
    <dimen name="rounded_corner_radius_top">28dp</dimen>
    <dimen name="rounded_corner_radius_bottom">28dp</dimen>

    <!--
        FIX: Use 'dp' instead of 'px' for density-independent padding.
        This value adds padding inside notifications and other UI elements
        to prevent content from being clipped by the rounded corners.
    -->
    <dimen name="rounded_corner_content_padding">16dp</dimen>

    <!--
        Device-specific value: Location of the physical power button.
        DO NOT CHANGE.
    -->
    <dimen name="physical_power_button_center_screen_location_y">860px</dimen>

</resources>