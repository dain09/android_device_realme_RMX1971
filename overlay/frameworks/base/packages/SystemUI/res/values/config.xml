<resources>

    <!-- ========================= -->
    <!--         UX Tweaks         -->
    <!-- ========================= -->

    <!-- TWEAK: Set shorter animation scales for a faster perceived performance.
         Default is 1.0. Setting to 0.75 makes animations quicker. -->
    <item name="config_windowAnimationScale" format="float" type="dimen">0.75</item>
    <item name="config_transitionAnimationScale" format="float" type="dimen">0.75</item>
    <item name="config_animatorDurationScale" format="float" type="dimen">0.75</item>

    <!-- TWEAK: Force showing VoLTE icon when available.
         Helpful for carriers that don't correctly flag it. -->
    <bool name="config_show4GForLTE">true</bool>
    <bool name="config_showVoLTEforLTE">true</bool>

    <!-- TWEAK: Disable smart replies in notifications -->
    <bool name="config_smart_replies_in_notifications_enabled">false</bool>
    <bool name="config_smart_replies_in_notifications_requires_targeting_p">false</bool>

    <!-- TWEAK: Vibrate on shelf icon animation for subtle feedback -->
    <bool name="config_vibrateOnIconAnimation">true</bool>

    <!-- TWEAK: Update battery info more frequently when charging -->
    <bool name="config_alternateFastchargeInfoUpdate">true</bool>


    <!-- ========================= -->
    <!--    Device-Specific HW     -->
    <!-- ========================= -->

    <!-- Doze / AOD Support -->
    <bool name="doze_display_state_supported">true</bool>
    <bool name="doze_proximity_check_before_pulse">false</bool>

    <!-- FPS Info Service (for gaming dashboards, etc.) -->
    <string name="config_fpsInfoSysNode" translatable="false">/sys/class/drm/sde-crtc-0/measured_fps</string>

    <!-- Proximity sensor configuration -->
    <string name="proximity_sensor_type" translatable="false">android.sensor.tp_proximity</string>
    <item name="proximity_sensor_threshold" translatable="false" format="float" type="dimen">5.0</item>

